---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "09b9c80391304fa2b9a307bae1aca765"}'></script>
    <style is:global>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 1rem;
      }

      .site-container {
        max-width: 1000px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        overflow: hidden;
      }

      .site-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        padding: 2rem 2rem 1.5rem;
        text-align: center;
        position: relative;
        overflow: hidden;
      }

      .site-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
          circle,
          rgba(255, 255, 255, 0.1) 0%,
          transparent 70%
        );
        animation: float 20s ease-in-out infinite;
      }

      @keyframes float {
        0%,
        100% {
          transform: translate(0, 0) rotate(0deg);
        }
        33% {
          transform: translate(30px, -30px) rotate(120deg);
        }
        66% {
          transform: translate(-20px, 20px) rotate(240deg);
        }
      }

      .site-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #ffffff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        margin: 0;
        position: relative;
        z-index: 1;
        letter-spacing: -0.5px;
      }

      .site-subtitle {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1.1rem;
        margin-top: 0.5rem;
        position: relative;
        z-index: 1;
        font-weight: 500;
      }

      nav {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        padding: 1.5rem 2rem;
        background: #f8f9fa;
        border-bottom: 3px solid #e9ecef;
      }

      nav a {
        text-decoration: none;
        font-weight: 600;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        background: #ffffff;
        color: #6c5ce7;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 2px solid transparent;
      }

      nav a:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(108, 92, 231, 0.3);
        border-color: #6c5ce7;
        background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
        color: #ffffff;
      }

      main {
        padding: 2rem;
        min-height: 400px;
      }

      a {
        color: #6c5ce7;
        transition: color 0.2s ease;
      }

      a:hover {
        color: #5f3dc4;
      }

      h1 {
        margin-bottom: 1rem;
        color: #2d3436;
        font-weight: 700;
        font-size: 2rem;
      }

      .comic-image {
        max-width: 100%;
        height: auto;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }

      .comic-image:hover {
        transform: scale(1.02);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
      }

      .comic-meta {
        color: #636e72;
        font-size: 0.95rem;
        margin: 0.5rem 0;
        font-weight: 500;
      }

      .archive-list {
        list-style: none;
      }

      .archive-list li {
        padding: 1rem;
        margin-bottom: 0.75rem;
        background: #f8f9fa;
        border-radius: 12px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
      }

      .archive-list li:hover {
        background: #ffffff;
        border-color: #6c5ce7;
        transform: translateX(8px);
        box-shadow: 0 4px 12px rgba(108, 92, 231, 0.2);
      }

      .archive-list a {
        text-decoration: none;
        color: #2d3436;
        font-weight: 600;
      }

      .archive-list a:hover {
        color: #6c5ce7;
      }

      details {
        margin-top: 1.5rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 12px;
        border: 2px solid #e9ecef;
      }

      summary {
        cursor: pointer;
        font-weight: 600;
        color: #6c5ce7;
        padding: 0.5rem;
        user-select: none;
      }

      summary:hover {
        color: #5f3dc4;
      }

      pre {
        white-space: pre-wrap;
        background: #ffffff;
        padding: 1rem;
        margin-top: 0.75rem;
        border-radius: 8px;
        border: 1px solid #e9ecef;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        line-height: 1.5;
      }
    </style>
  </head>
  <body>
    <div class="site-container">
      <header class="site-header">
        <h1 class="site-title">✨ Comic Haven ✨</h1>
        <p class="site-subtitle">
          Where stories come to life, one panel at a time
        </p>
      </header>
      <nav>
        <a href="/">Latest</a>
        <a href="/archive">Archive</a>
      </nav>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
